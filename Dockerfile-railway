# Railway用Dockerfile
FROM python:3.10-slim

WORKDIR /opt/xiaozhi-esp32-server

# システム依存関係のインストール
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    libopus0 \
    ffmpeg \
    wget \
    unzip \
    git \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Python依存関係のインストール
COPY main/xiaozhi-server/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# アプリケーションコードのコピー
COPY main/xiaozhi-server .

# 必要なディレクトリの作成
RUN mkdir -p tmp data models && \
    cp -f config_railway.yaml config.yaml && \
    /bin/sh -lc 'printf "manager-api:\n  url: \"\"\n  secret: \"\"\n" > data/.config.yaml'

# モデル取得は起動時にアプリ側が行うためビルド時は作成のみ（外部配布元の認証エラー回避）
RUN mkdir -p models/sherpa_sense_voice

# Railway用の設定ファイルは上でコピー済み

# ポート8000を公開
EXPOSE 8000

# アプリケーション起動
CMD ["python", "app.py"]
