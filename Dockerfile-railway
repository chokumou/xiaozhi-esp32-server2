# Railway用Dockerfile
FROM python:3.10-slim

WORKDIR /opt/xiaozhi-esp32-server

# システム依存関係のインストール
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    libopus0 \
    ffmpeg \
    wget \
    unzip \
    git \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Python依存関係のインストール
COPY main/xiaozhi-server/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# アプリケーションコードのコピー
COPY main/xiaozhi-server .

# 必要なディレクトリの作成
RUN mkdir -p tmp data models

# モデルをGitHubリリース等から取得（403回避）
RUN mkdir -p models/sherpa_sense_voice && \
    wget -O models/sherpa_sense_voice/model.int8.onnx "https://huggingface.co/pdzsonline/sherpa-onnx-sense-voice-zh-en-ja-ko-yue/resolve/main/model.int8.onnx?download=true" && \
    wget -O models/sherpa_sense_voice/tokens.txt "https://huggingface.co/pdzsonline/sherpa-onnx-sense-voice-zh-en-ja-ko-yue/resolve/main/tokens.txt?download=true"

# Railway用の設定ファイルをコピー
COPY main/xiaozhi-server/config_railway.yaml config.yaml

# ポート8000を公開
EXPOSE 8000

# アプリケーション起動
CMD ["python", "app.py"]
